<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
            android:text="eliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_eliminar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.86"
            app:layout_constraintVertical_bias="0.784"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gestion de Productos"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.022"
            app:layout_constraintHorizontal_bias="0.518" android:id="@+id/textView2"/>
    <EditText
            android:layout_width="87dp"
            android:layout_height="42dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_id"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="564dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="56dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginEnd="145dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0" android:hint="id"/>
    <EditText
            android:layout_width="87dp"
            android:layout_height="42dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_Nombre"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="564dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="56dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginEnd="145dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0" android:hint="Nombre"/>
    <EditText
            android:layout_width="315dp"
            android:layout_height="56dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_descripcion"
            android:hint="descripcion"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.182" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="94dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_costo"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_descripcion"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="49dp"
            android:layout_marginEnd="152dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:hint="costo"/>

    <EditText
            android:layout_width="94dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_fecha"
            android:layout_marginTop="92dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_descripcion"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="49dp"
            android:layout_marginEnd="152dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:hint="fecha"/>
    <EditText
            android:layout_width="94dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_precio"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_descripcion"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="49dp"
            android:layout_marginEnd="152dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="412dp"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.0" android:hint="Precio"/>
    <EditText
            android:layout_width="112dp"
            android:layout_height="41dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_stock"
            android:hint="Stock" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.889"
            app:layout_constraintVertical_bias="0.3"/>
    <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="40dp"
            android:layout_height="38dp"
            android:layout_marginBottom="220dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.641"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button8"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints,UnknownId"/>
    <ImageView
            android:id="@+id/imageView"
            android:layout_width="195dp"
            android:layout_height="117dp"
            android:background="#B1CDDA"
            android:contentDescription="@string/app_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.555"
            tools:ignore="ImageContrastCheck"
            tools:srcCompat="@tools:sample/avatars"/>
    <ImageButton
            android:id="@+id/buttonCamara"
            android:layout_width="99dp"
            android:layout_height="38dp"
            android:layout_marginBottom="88dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.153"
            app:srcCompat="@android:drawable/ic_menu_camera"
            tools:ignore="SpeakableTextPresentCheck" app:layout_constraintHorizontal_bias="0.359"/>
    <Button
            android:text="Grabar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_grabar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.102"
            app:layout_constraintVertical_bias="0.784"/>
    <Button
            android:text="Editar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_editar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.784"/>
    <ListView
            android:layout_width="382dp"
            android:layout_height="123dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.973" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/list_view"/>

</android.support.constraint.ConstraintLayout>