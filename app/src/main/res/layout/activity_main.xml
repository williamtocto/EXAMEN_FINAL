<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
            android:text="eliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_eliminar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.851"
            app:layout_constraintVertical_bias="0.732"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gestion de Productos"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.022"
            app:layout_constraintHorizontal_bias="0.518" android:id="@+id/textView2"/>
    <EditText
            android:layout_width="87dp"
            android:layout_height="42dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_id"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="56dp"
            android:layout_marginEnd="145dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:hint="id" app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.084"/>
    <EditText
            android:layout_width="87dp"
            android:layout_height="42dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_Nombre"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="56dp"
            android:layout_marginEnd="145dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.943"
            android:hint="Nombre" app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.084"/>
    <EditText
            android:layout_width="315dp"
            android:layout_height="56dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_descripcion"
            android:hint="descripcion"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.182" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <EditText
            android:layout_width="94dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_costo"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="49dp"
            android:layout_marginEnd="152dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:hint="costo"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.295"/>
    <EditText
            android:layout_width="94dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_fecha"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="49dp"
            android:layout_marginEnd="152dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:hint="fecha" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.408"/>
    <EditText
            android:layout_width="94dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_precio"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="49dp"
            android:layout_marginEnd="152dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.939" android:hint="Precio" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.295"/>
    <EditText
            android:layout_width="112dp"
            android:layout_height="41dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_stock"
            android:hint="Stock" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.889"
            app:layout_constraintVertical_bias="0.3"/>
    <ImageView
            android:id="@+id/imageView"
            android:layout_width="195dp"
            android:layout_height="117dp"
            android:background="#B1CDDA"
            android:contentDescription="@string/app_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ImageContrastCheck"
            tools:srcCompat="@tools:sample/avatars" app:layout_constraintHorizontal_bias="0.925"
            app:layout_constraintVertical_bias="0.529"/>
    <ImageButton
            android:id="@+id/buttonCamara"
            android:layout_width="99dp"
            android:layout_height="38dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.545"
            app:srcCompat="@android:drawable/ic_menu_camera"
            tools:ignore="SpeakableTextPresentCheck" app:layout_constraintHorizontal_bias="0.237"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Grabar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_grabar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.151"
            app:layout_constraintVertical_bias="0.732"/>
    <Button
            android:text="Editar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_editar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.489"
            app:layout_constraintVertical_bias="0.743"/>
    <ListView
            android:layout_width="347dp"
            android:layout_height="139dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.972" android:id="@+id/list_view"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.484"/>

</android.support.constraint.ConstraintLayout>